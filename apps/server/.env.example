# Server
PORT=3000

# Redis event stream
REDIS_URL=redis://localhost:6379
REDIS_STREAM_KEY=agent_events
REDIS_CONSUMER_GROUP=agent_runtime
REDIS_CONSUMER_NAME=worker-local

# Database
DATABASE_URL=file:./db/sqlite.db

# LLM provider credentials
OPENAI_API_KEY=

# Chat model selection
# Leave CHAT_ALLOWED_MODELS empty to allow any provider model id.
CHAT_ALLOWED_MODELS=
CHAT_DEFAULT_MODEL=gpt-4o-mini

# Summary + recent memory tuning
CHAT_SUMMARY_MODEL=
CHAT_MEMORY_RECENT_MESSAGES=8
